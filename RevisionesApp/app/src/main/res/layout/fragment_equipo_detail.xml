            android:textSize="20sp" />

        <EditText
            android:id="@+id/nSerieEquipoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/pesoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textStyle="bold"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pesoEquipoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dimensionesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
